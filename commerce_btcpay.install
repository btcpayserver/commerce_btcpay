<?php

/**
 * Implements hook_requirements().
 */
function commerce_btcpay_requirements($phase) {
  $requirements = [];
  if ($phase == 'install') {
    if (!class_exists('\BitPaySDK\Client')) {
      $requirements['commerce_btcpay_requirement'] = [
        'title' => t('BitPay php-client library missing.'),
        'description' => t('Commerce BTCPay requires the BitPay SDK library: https://packagist.org/packages/bitpay/sdk which is installed automatically if you use Composer.'),
        'severity' => REQUIREMENT_ERROR,
      ];
    }
  }

  return $requirements;
}
